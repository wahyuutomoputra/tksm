<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tokosampurna" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Toko Sampurna</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="http://tokosampurna.com*" />
    <access origin="http://www.tokosampurna.com*" />
    <access origin="https://www.tokosampurna.com*" />
    <access origin="https://tokosampurna.com*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <!-- <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform> -->

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/Icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/Icon-60.png" width="60" height="60" />
        <!-- iPad -->
        <icon src="res/ios/Icon-76.png" width="76" height="76" />
        <icon src="res/ios/Icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/Icon.png" width="57" height="57" />
        <icon src="res/ios/Icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/Icon-72.png" width="72" height="72" />
        <icon src="res/ios/Icon-72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="res/ios/Icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/Icon-Small.png" width="29" height="29" />
        <icon src="res/ios/Icon-Small@2x.png" width="58" height="58" />
        <icon src="res/ios/Icon-Small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/Icon-50.png" width="50" height="50" />
        <!-- iPad Pro -->
        <icon src="res/ios/Icon-83.5@2x.png" width="167" height="167" />
    </platform>
</widget>
